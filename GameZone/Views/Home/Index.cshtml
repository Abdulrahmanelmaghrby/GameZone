
@model IEnumerable<Game>
@{
    ViewData["Title"] = "Home Page";
}


@if (!Model.Any())  /* if there is no games in DATA BASE*/
{
    <div class="alert  alert-warning mt-5">
        <h4 class="alert-heading">No Games!</h4>
        <p class="mb-0"> No games were add yet !</p>
    </div>
}
else
{
    <div class="row mt-5">
        @foreach(var game in Model)
        {

            <a class=" col-lg-4 col-md-6 text-decoration-none" asp-controller="Games" asp-action="Details" asp-route-id="@game.Id">

                <div class="card border-success mb-3 rounded-3 overflow-hidden" style="max-width: 20rem;">
                    <div class="card-body"style="background-image:url(@($"{FileSettings.ImagesPath}/{game.Cover}"));background-size:cover;background-position:center;height:400px;">
                      <div class="d-flex align-items-end h-100">
                            <span class="badge rounded-pill bg-secondary rounded-0 fs-3">@game.Category.Name</span>
                      </div>
                    </div>

                    <div class="card-footer text-muted d-flex justify-content-between align-items-center">
                        <h5>@game.Name</h5>
                        <div>
                            @foreach(var gamedevice in game.Devices)
                            {
                                <i class="@gamedevice.Device.Icon  me-2 fs-4"></i>
                            }
                        </div>
                    </div>    
                </div>

             </a>
            
        }
    </div>
}
