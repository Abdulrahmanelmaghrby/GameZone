@using GameZone.Settings;
@model CreateGameFormViewModel

@{
    ViewData["Title"] = "Add Game";
}
<div>
    <i class="bi bi-plus-circle-dotted"></i>
    Add a new game
    <Form asp-controller="Games" enctype="multipart/form-data">
        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="Name" class="form-label mt-4"></label>
                    <input type="text" class="form-control" asp-for="Name" placeholder="Game Name">
                    <span asp-validation-for="Name" class="text-bg-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="CategoryId" class="form-label mt-4"></label>
                    <select class="form-select" asp-for="CategoryId" asp-items="Model.Categories"
                    data-placeholder="Select a categoty " data-minimum-results-for-search="Infinity">
                        <option value="">Select game catigory</option>   
                    </select>
                    <span asp-validation-for="CategoryId" class="text-bg-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="SelectedDevices" class="form-label mt-4"></label>
                    <select class="form-select" asp-for="SelectedDevices" asp-items="Model.Devices"
                            data-placeholder="Select game device(s) ">
                        <option> </option>

                    </select>
                    <span asp-validation-for="SelectedDevices" class="text-bg-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Description" class="form-label mt-4"></label>
                    <textarea class="form-control" asp-for="Description"></textarea>
                    <span asp-validation-for="Description" class="text-bg-danger"></span>
                </div>
                <div class="form-group ">
                    <label asp-for="Cover" class="form-label mt-4"></label>
                    <input type="file" class="form-control" asp-for="Cover" 
                    data-rule-extension="@FileSettings.AllowedExtentions.Replace(".",string.Empty)"
                           data-msg-extension="NOT allowed extension !!!!!"
                    data-rule-fileSize="@FileSettings.MaxFileSizeInBytes"
                    data-msg-fileSize="Maximum allowed Size is @FileSettings.MaxFileSize MB !!!!!!!">

                    <span asp-validation-for="Cover" class="text-bg-danger d-block"></span>
                    <small class="form-text text-muted">Only @FileSettings.AllowedExtentions are allowed with max size @FileSettings.MaxFileSizeInBytes.</small>
                    

                </div>
                 <button type="Submit" class="btn btn-light text-black mt-4">Save</button>
            </div>
            <div class="col-md-6 d-flex justify-content-center pt-4 overflow-hidden">
                <img class="cover-preview d-none" alt="Cover"/>
            </div>

        </div>

    </Form>
    
</div>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
    <script src="~/js/filesize-validator.js"asp-append-version="true"></script>
    <script src="~/js/game-form.js" asp-append-version="true"></script>
}
  